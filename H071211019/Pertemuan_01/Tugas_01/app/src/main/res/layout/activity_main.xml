<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/my_cardview"
            android:layout_width="match_parent"
            android:layout_height="388dp"
            app:cardBackgroundColor="#006D77"
            app:shapeAppearanceOverlay="@style/RoundedTopEdges"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrowback"
                android:layout_marginTop="28dp"
                android:layout_marginStart="16dp"/>

            <TextView
                android:id="@+id/profile_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="16sp"
                android:textColor="#EDF6F9"
                android:textStyle="bold"
                android:layout_marginTop="28dp"
                android:fontFamily="sans-serif"
                android:layout_gravity="center_horizontal"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/threedots"
                android:layout_gravity="end"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="16dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="88dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/myphoto"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salim Maulana"
                android:textColor="#EDF6F9"
                android:textStyle="bold"
                android:textSize="24sp"
                android:fontFamily="sans-serif"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="200dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="H071211019"
                android:textColor="#EDF6F9"
                android:textSize="12sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="236dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:orientation="vertical"
                android:layout_marginTop="276dp"
                android:layout_marginStart="64dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13"
                    android:textColor="#EDF6F9"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Post"
                    android:textColor="#EDF6F9"
                    android:textSize="12sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_marginTop="276dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="778"
                    android:textColor="#EDF6F9"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Followers"
                    android:textColor="#EDF6F9"
                    android:textSize="12sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:orientation="vertical"
                android:layout_marginTop="276dp"
                android:layout_marginEnd="64dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="105"
                    android:textColor="#EDF6F9"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Following"
                    android:textColor="#EDF6F9"
                    android:textSize="12sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="3dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="356dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#EDF6F9"/>

            </androidx.cardview.widget.CardView>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#303030"
            android:fontFamily="sans-serif"
            app:layout_constraintTop_toBottomOf="@id/my_cardview"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp"
            android:layout_marginStart="24dp"/>

        <TextView
            android:id="@+id/about_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lorem"
            android:textSize="12sp"
            android:textColor="#777777"
            app:layout_constraintTop_toBottomOf="@id/about"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="12dp"/>

        <View
            android:id="@+id/line_cont"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#DADADA"
            app:layout_constraintTop_toBottomOf="@id/about_txt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="28dp"/>

        <ImageView
            android:id="@+id/vid_ico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/vidclip"
            app:layout_constraintTop_toBottomOf="@id/line_cont"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"/>

        <ImageView
            android:id="@+id/post_ico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/grid"
            app:layout_constraintTop_toBottomOf="@id/line_cont"
            app:layout_constraintEnd_toStartOf="@id/vid_ico"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="96dp"/>

        <ImageView
            android:id="@+id/tag_ico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tag"
            app:layout_constraintTop_toBottomOf="@id/line_cont"
            app:layout_constraintStart_toEndOf="@id/vid_ico"
            android:layout_marginTop="12dp"
            android:layout_marginStart="96dp"/>
        
        <androidx.cardview.widget.CardView
            android:id="@+id/line_menu"
            android:layout_width="30dp"
            android:layout_height="2dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@id/post_ico"
            app:layout_constraintStart_toStartOf="@id/post_ico"
            app:layout_constraintEnd_toEndOf="@id/post_ico"
            android:layout_marginTop="8dp"
            app:cardElevation="0dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#545454"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/img_op"
            android:layout_width="172dp"
            android:layout_height="172dp"
            app:cardCornerRadius="16dp"
            app:layout_constraintTop_toBottomOf="@id/line_menu"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/img_op"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/img_pp"
            android:layout_width="172dp"
            android:layout_height="240dp"
            app:cardCornerRadius="16dp"
            app:layout_constraintTop_toBottomOf="@id/line_menu"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/download"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/img_tp"
            android:layout_width="172dp"
            android:layout_height="240dp"
            app:cardCornerRadius="16dp"
            app:layout_constraintTop_toBottomOf="@id/img_op"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/lopp"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/img_tt"
            android:layout_width="172dp"
            android:layout_height="172dp"
            app:cardCornerRadius="16dp"
            app:layout_constraintTop_toBottomOf="@id/img_pp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="12dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/pxt"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/img_tp"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

  </ScrollView>