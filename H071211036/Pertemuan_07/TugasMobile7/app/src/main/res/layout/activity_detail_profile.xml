<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#2A3C5F"
    tools:context=".DetailProfile">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="320dp"
        android:layout_height="220dp"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:backgroundTint="#EDEFE2"
        android:outlineSpotShadowColor="@color/black"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profile"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginBottom="25dp"
            android:scaleType="centerCrop"
            android:src="#ffffff"
            app:shapeAppearanceOverlay="@style/radius">

        </com.google.android.material.imageview.ShapeableImageView>


        <TextView
            android:id="@+id/nameuser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            tools:text="steve carell"
            android:fontFamily="@font/made_dillan"
            android:textColor="#38373F"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/emailuser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="115dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/hiragino_sans_gb_w3"
            tools:text="stevecarell@gmail.com"
            android:textColor="#727980"
            android:textSize="14sp"
            android:textStyle="bold"/>

    </androidx.cardview.widget.CardView>

    <ProgressBar
        android:id="@+id/pb1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:id="@+id/retry_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Please check your internet connection"
            android:textColor="@color/black"
            android:textSize="14sp"/>
        <ImageView
            android:id="@+id/retry"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/baseline_refresh_24"
            android:onClick="Retry"/>
    </LinearLayout>
</LinearLayout>