<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="5dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/linear"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:cardElevation="0dp"
        android:backgroundTint="#EDEFE2"
        android:outlineSpotShadowColor="@color/black"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/Profile"
            android:layout_width="70dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:scaleType="centerCrop"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:src="#ffffff"
            app:shapeAppearanceOverlay="@style/radius">

        </com.google.android.material.imageview.ShapeableImageView>
        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="steve carell"
            android:textAllCaps="false"
            android:layout_marginTop="23dp"
            android:fontFamily="@font/made_dillan"
            android:textColor="#38373F"
            android:textSize="18sp"
            android:layout_marginStart="95dp"/>
        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hiragino_sans_gb_w3"
            tools:text="stevecarell@gmail.com"
            android:textColor="#727980"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginStart="95dp"
            android:layout_marginTop="48dp"/>
    </androidx.cardview.widget.CardView>



</LinearLayout>