<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".AddEditNote"
    android:background="#132742">

    <ImageView
        android:layout_width="299dp"
        android:layout_height="373dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="-350dp"
        android:src="@drawable/circle" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:backgroundTint="#F6C1C6"
        android:layout_gravity="center"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        app:cardCornerRadius="60dp">

        <EditText
            android:id="@+id/etTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F6C1C6"
            android:hint="Title"
            android:fontFamily="@font/arialceb"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:textColor="#132742"
            android:textColorHint="#132742"
            android:textSize="14sp" />

    </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:backgroundTint="#F6C1C6"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="30dp"
                app:cardCornerRadius="60dp">
                <EditText
                    android:id="@+id/etDescription"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Description"
                    android:background="#F6C1C6"
                    android:fontFamily="@font/arialceb"
                    android:textStyle="bold"
                    android:layout_marginStart="20dp"
                    android:inputType="textPersonName"
                    android:maxLines="1"
                    android:textColor="#132742"
                    android:textColorHint="#132742"
                    android:textSize="14sp" />
            </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp">

        <Button
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="Save"
            android:textColor="#FDF1DF"
            android:textSize="15sp"
            android:backgroundTint="#18304C"/>

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="Delete"
            android:textSize="15sp"
            android:textColor="#FDF1DF"
            android:backgroundTint="#18304C"
            android:layout_marginStart="@dimen/_7sdp"/>
    </LinearLayout>

    <ImageView
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="-500dp"
        android:src="@drawable/circle" />


</LinearLayout>