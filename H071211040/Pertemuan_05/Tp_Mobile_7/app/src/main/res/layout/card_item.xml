<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/abu">

    <RelativeLayout
        android:id="@+id/rlUpImageContainer"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_27sdp"
        android:padding="@dimen/_20sdp"
        android:background="@drawable/container_post1">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civProfilePictureHome"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/poro1"/>
        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adam"
            android:layout_toEndOf="@id/civProfilePictureHome"
            android:layout_marginStart="@dimen/_5sdp"/>
        <TextView
            android:id="@+id/tvFullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Muchtar Adam"
            android:layout_toEndOf="@id/civProfilePictureHome"
            android:layout_below="@id/tvUserName"
            android:layout_marginStart="@dimen/_5sdp"/>

        <ImageView
            android:id="@+id/ivUploadedImage"
            android:layout_width="@dimen/_170sdp"
            android:layout_height="@dimen/_170sdp"
            android:layout_centerInParent="true"
            android:src="@drawable/baseline_image_24" />
        <TextView
            android:id="@+id/tv_captionHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Caption Nanti sini"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_below="@id/ivUploadedImage"/>
    </RelativeLayout>

</RelativeLayout>