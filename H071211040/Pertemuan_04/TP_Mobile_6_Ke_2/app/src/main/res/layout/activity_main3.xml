<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.TP_Mobile_6_Ke_2.MainActivity2"
    android:background="@drawable/background_chat">

    <RelativeLayout
        android:id="@+id/iv_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black2">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_profilepicture"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/tv_roomchat_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama na nanti di sini"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:textSize="18sp"
            android:layout_below="@id/iv_profilepicture"/>
        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tv_roomchat_name"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="30dp"
            android:text="089-539-830-4141"
            android:textColor="@color/white"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black2"
        android:layout_below="@id/iv_profile"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tv_Status_Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_status"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="January 1, 2023"
            android:textColor="@color/white"/>
    </RelativeLayout>


</RelativeLayout>