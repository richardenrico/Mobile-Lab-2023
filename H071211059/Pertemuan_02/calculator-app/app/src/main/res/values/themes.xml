<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Praktikum02Kalkulator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="buttonComponent">
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:textSize">35sp</item>
    </style>

    <style name="orangeBtnStyle" parent="buttonComponent">
        <item name="android:textColor">@android:color/holo_orange_dark</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="buttonNumber" parent="buttonComponent">
        <item name="android:onClick">numberClicked</item>
    </style>

    <style name="focusedText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">52sp</item>
    </style>

    <style name="unfocusedText">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">35sp</item>
    </style>
</resources>